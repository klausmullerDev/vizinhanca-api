generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String    @id @default(uuid())
  name             String
  email            String    @unique
  password         String
  cpf              String?   @unique
  telefone         String?
  dataDeNascimento DateTime?
  sexo             String?
  createdAt        DateTime  @default(now())

  // Relacionamento um-para-um com Endereco
  endereco Endereco?

  // Relacionamentos existentes
  pedidos    Pedido[]
  interesses Interesse[]
  avaliacoes Avaliacao[]

  @@map("users")
}

model Endereco {
  id          String  @id @default(uuid())
  rua         String
  numero      String
  complemento String?
  bairro      String
  cidade      String
  estado      String
  cep         String

  // Relacionamento um-para-um com User
  userId String @unique
  user   User   @relation(fields: [userId], references: [id])

  @@map("enderecos")
}

model Pedido {
  id        String   @id @default(uuid())
  titulo    String 
  descricao String 
  createdAt DateTime @default(now()) 

  authorId   String
  author     User        @relation(fields: [authorId], references: [id])
  interesses Interesse[]

  @@map("pedidos")
}

model Interesse {
  id String @id @default(uuid())

  userId   String
  user     User   @relation(fields: [userId], references: [id])
  pedidoId String
  pedido   Pedido @relation(fields: [pedidoId], references: [id])

  @@map("interesses")
}

model Avaliacao {
  id       String @id @default(uuid())
  authorId String
  author   User   @relation(fields: [authorId], references: [id])

  @@map("avaliacoes")
}

model Categoria {
  id   String @id @default(uuid())
  name String @unique

  @@map("categorias")
}
